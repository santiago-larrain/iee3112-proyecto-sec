# Configuración del Sistema de Análisis de Reclamos SEC
# Copiar este archivo a config.yaml y ajustar según necesidades

base_datos:
  tipo: sqlite  # sqlite o postgresql
  nombre: sec_reclamos.db
  host: localhost
  port: 5432
  usuario: ""
  password: ""

logging:
  nivel: INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
  archivo: logs/sec_reclamos.log
  formato: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

scraping:
  timeout: 30  # segundos
  max_reintentos: 3
  delay_entre_peticiones: 2  # segundos entre peticiones
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

